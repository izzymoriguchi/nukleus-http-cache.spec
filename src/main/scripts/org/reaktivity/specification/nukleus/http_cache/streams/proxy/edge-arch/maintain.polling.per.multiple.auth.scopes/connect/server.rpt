property newProxyConnectRef ${nuklei:newReferenceId()} # external scope

property date ${http_cache:date()}
property etag ${http_cache:strongEtag()} #shared
property etag2 ${http_cache:strongEtag()} #shared

accept await ROUTED_PROXY
        "nukleus://target/streams/http-cache"
        option nukleus:route ${newProxyConnectRef}
        option nukleus:transmission "half-duplex"
accepted

read nukleus:begin.ext ${http:headers()
                             .item(":scheme", "http")
                             .item(":method", "GET")
                             .item(":path", "/path")
                             .item(":authority", "localhost:8080")
                             .item("authorization", "some-authorization-value")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:headers()
                              .item(":status", "200")
                              .item("content-length", "11")
                              .item("date", date)
                              .item("surrogate-control", "max-age=1+10, x-protected")
                              .item("etag", etag)
                              .build()}
write "response 1a"

write close

accepted

read nukleus:begin.ext ${http:headers()
                             .item(":scheme", "http")
                             .item(":method", "GET")
                             .item(":path", "/path")
                             .item(":authority", "localhost:8080")
                             .item("authorization", "some-authorization-value")
                             .item("if-none-match", etag)
                             .build()}

connected

read closed

read notify POLLING_ON_1

accepted

read nukleus:begin.ext ${http:headers()
                             .item(":scheme", "http")
                             .item(":method", "GET")
                             .item(":path", "/path")
                             .item(":authority", "localhost:8080")
                             .item("authorization", "some-authorization-value2")
                             .build()}

connected

read closed

write nukleus:begin.ext ${http:headers()
                              .item(":status", "200")
                              .item("content-length", "11")
                              .item("date", date)
                              .item("surrogate-control", "max-age=1+10, x-protected")
                              .item("etag", etag2)
                              .build()}
write "response 1b"

write close

accepted

read nukleus:begin.ext ${http:headers()
                             .item(":scheme", "http")
                             .item(":method", "GET")
                             .item(":path", "/path")
                             .item(":authority", "localhost:8080")
                             .item("authorization", "some-authorization-value2")
                             .item("if-none-match", etag2)
                             .build()}

connected

read closed
